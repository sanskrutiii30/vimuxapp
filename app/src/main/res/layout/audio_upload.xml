<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".audioUpload">

    <EditText
        android:id="@+id/audio_upload_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/input_design"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:padding="14dp"
        android:hint="Title..."/>

    <EditText
        android:id="@+id/audio_upload_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/audio_upload_title"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/input_design"
        android:hint="Description..."
        android:minHeight="150dp"
        android:padding="14dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <Button
        android:id="@+id/audio_upload_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/audio_upload_desc"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:text="upload"
        android:background="@drawable/input_design"
        android:backgroundTint="@color/black"/>

    <ProgressBar
        android:id="@+id/audio_upload_progBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyleHorizontal"
        android:padding="5dp"
        android:layout_below="@id/audio_upload_btn"
        android:backgroundTint="@color/black"
        android:indeterminate="false"
        android:indeterminateOnly="false"
        android:layout_marginTop="40dp"
        />

    <TextView
        android:id="@+id/audio_upload_progTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_below="@id/audio_upload_progBar"
        android:layout_marginTop="5dp"/>


</RelativeLayout>