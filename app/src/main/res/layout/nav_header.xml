<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:padding="15dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back_profile_grad"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <TextView
        android:id="@+id/nav_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ViMuX"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="@color/black"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardCirNav"
        app:cardCornerRadius="65dp"
        android:elevation="10dp"
        app:cardBackgroundColor="@color/white"
        android:layout_marginTop="30dp"
        android:layout_below="@id/nav_title"
        android:shape="ring"
        android:layout_width="130dp"
        android:layout_height="130dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/nav_image"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:src="@drawable/profile"
            android:layout_gravity="center_horizontal|center_vertical"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/nav_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nav_title"
        android:layout_toRightOf="@id/cardCirNav"
        android:layout_marginTop="50dp"
        android:text="Name"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginLeft="30dp"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/nav_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nav_name"
        android:layout_toRightOf="@id/cardCirNav"
        android:text="UserName"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_marginLeft="30dp"
        android:textColor="@color/black"/>

</RelativeLayout>