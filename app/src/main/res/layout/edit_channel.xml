<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".editChannel">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/channelLogo"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/profile"/>

    <ProgressBar
        android:id="@+id/edit_channel_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/channelLogo"
        android:layout_alignTop="@+id/channelLogo"
        android:layout_alignEnd="@+id/channelLogo"
        android:layout_alignBottom="@+id/channelLogo"
        android:layout_marginStart="80dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="90dp" />

    <EditText
        android:id="@+id/channelTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_below="@id/channelLogo"
        android:background="@drawable/input_design"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:padding="14dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint="channel title"/>

    <EditText
        android:id="@+id/channelDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/channelTitle"
        android:background="@drawable/input_design"
        android:padding="14dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint="channel description"/>

    <Button
        android:id="@+id/updateChannelBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/channelDescription"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="@color/black"
        android:background="@drawable/edit_text_bg"
        android:text="Update Details"/>

</RelativeLayout>