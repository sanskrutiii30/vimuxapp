<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginTop="20dp"
    app:cardElevation="15dp"
    app:cardBackgroundColor="@color/black">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_audio_image"
            android:layout_width="150dp"
            android:layout_height="180dp"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/item_audio_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/item_audio_image"
            android:text="audio name"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_audio_listen_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_audio_title"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/item_audio_image"
            android:text="times listened"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_audio_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/item_audio_image"
            android:layout_below="@id/item_audio_listen_count"
            android:layout_marginTop="20dp"
            android:textSize="15dp"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"
            android:text="date"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>